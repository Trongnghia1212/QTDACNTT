
@{
    ViewBag.Title = "SanPham1";
    Layout = "~/Views/Shared/TrangChu.cshtml";
}

<div class="body">
    <div class="body_main">
        <div class="body_top">
            <div class="top-contentleft">
                <a class="top-contentleft_text" href="/Trangchu/index">TRANG CHỦ</a>
                <p> &nbsp; / &nbsp;&nbsp; </p>
                <a class="top-contentleft_text" href="/Trangchu/SanPham1" style="color: black;"><b>CỬA HÀNG</b></a>
            </div>
            <div class="top-contentright">
                <p class="top-contentleft_text"> Hiển thị một kết quả duy nhất </p>
                <select style="width: 255px;height: 38px;" id="option" name="option">
                    <option class="top-contentleft_text" value="Thứ tự theo giá">
                        Thứ tự theo giá
                    </option>
                    <option class="top-contentleft_text" value="Thứ tự theo giá: thấp đến cao">
                        Thứ tự theo giá: thấp
                        đến
                        cao
                    </option>
                    <option class="top-contentleft_text" value="Thứ tự theo giá: cao xuống thấp">
                        Thứ tự theo giá:
                        cao
                        xuống thấp
                    </option>
                </select>
            </div>
        </div>
    </div>
    <div class="body_main_bt">
        <div class="right_item">
            <div class="item_SP">
                @foreach (var item in Model)
                {
                        <div class="frames_box_SP">
                            <div style="overflow: hidden;">
                                <a href="@Url.Action("Detail", "TrangChu", new {id = item.Id})">
                                    <img src="/images/@item.images" alt="logo" class="frames_box_img_SP">
                                </a>
                            </div>
                            <div class="frames_text">
                                <p>@item.Name</p>
                            </div>
                            <div class="frames_text_price">
                                <p>@string.Format("{0:#,0}", item.Gia)₫</p>
                            </div>
                            <div style="margin-top: 30px; text-align: center;">
                                <a href="/Cart/AddToCart/@item.Id" class="frames_button_buy">THÊM VÀO GIỎ</a>
                            </div>
                        </div>
                }
            </div>
        </div>
    </div>

</div>
